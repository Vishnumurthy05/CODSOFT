      background: #f4f4f4;
      font-family: Arial, sans-serif;
    }

    .calculator {
      width: 260px;
      background: #2196f3;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0px 5px 15px rgba(0,0,0,0.2);
    }

    .display {
      background: #e6f0fa;
      height: 60px;
      border-radius: 5px;
      margin-bottom: 15px;
      padding: 10px;
      font-size: 24px;
      text-align: right;
      overflow-x: auto;
    }

    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 10px;
    }

    button {
      padding: 20px;
      font-size: 18px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      background: #1976d2;
      color: #fff;
      transition: background 0.2s;
    }

    button:hover {
      background: #0d47a1;
    }

